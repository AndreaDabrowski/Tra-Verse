
<h2>Cruise-Style Trip List</h2>

@{

    string[] companyName = new string[3] { "Delta", "Spirit", "Infinity" };
    string[] shipImages = new string[3] { "https://cdn.mos.cms.futurecdn.net/eJCVbwUPfV9Mx7sH7bdPRj-970-80.jpg", "http://www.ex-astris-scientia.org/scans/factfiles/raven-cgi.jpg", "https://vignette.wikia.nocookie.net/memory-gamma/images/9/99/Renovamen_Class.jpg/revision/latest?cb=20160303004949" };
    string[] planets = ViewBag.PlanetList;
}
<h1>Choose Your Cruise-Style Vacation :)</h1>
<h3><a href="/Home/EditTrip">EDIT YOUR CURRENT TRIP</a></h3>

@TempData["LoggedIn"]
@for (int i = 0; i < 29; i++)
{

    int j = ViewBag.TripList[i].PlanetIndex;

    var travel = ViewBag.Travel["results"][j]["itineraries"][0]["outbound"]["flights"][0];

    <div>
        <img src=@shipImages[9] alt=@ViewBag.NASA[j]["pl_name"] height="200" width="200" align="left">
        <span>Planet Name: @ViewBag.NASA[j]["pl_name"]</span>
        <p>
            Distance from Earth: @ViewBag.NASA[j]["st_dist"] parsecs
            *Unit of distance where 1 parsec equals the distance from the Earth to Sun
        </p>
        <p>Departure Date: @travel["departs_at"]</p>
        <p>Number of Days: @ViewBag.TripList[i].NumberOfDays</p>
        <p>Rooms remaining: @ViewBag.Travel["results"][j]["fare"]["total_fares"]</p>
            
        <p>Review count: @ViewBag.Yelp["businesses"][j]["review_count"]</p>
        <p>Rating: @ViewBag.Yelp["businesses"][j]["rating"]</p>
    </div>
    <br />

    // array of company names, and ship images
    // display by company index, company index

}