@{
    //string path = "~/Content/Images/Planets/";
    //string[] PlanetImages = new string[16] { path + "GJ 3021 b.jpg", path+"HATS-34 b.png", path+"HD 142 b.png", path+"HD 142 c.jpg", path+"HD 1461 b.png", path+"HD 1502 b.png", path+"HD 564 b.jpg", path+"HD1461c.jpg", path+"KELT-1 b.jpg", path+"Qatar-4 b.jpg", path+"WASP-136 b.png", path+"WASP-158 b.PNG", path+"WASP-26 b.png", path+"WASP-32 b.png", path+"WASP-44 b.png", path+"WASP-96 b.PNG" };
    int p = ViewBag.TripIndices.PlanetIndex;
    string[] companyName = new string[3] { "Delta", "Spirit", "Infinity" };
    string[] shipImages = new string[3] { "https://cdn.mos.cms.futurecdn.net/eJCVbwUPfV9Mx7sH7bdPRj-970-80.jpg", "http://www.ex-astris-scientia.org/scans/factfiles/raven-cgi.jpg", "https://vignette.wikia.nocookie.net/memory-gamma/images/9/99/Renovamen_Class.jpg/revision/latest?cb=20160303004949" };

    string priceString = ViewBag.Travel["results"][p]["fare"]["total_price"].ToString();
    float priceBeforeTotal = float.Parse(priceString);
}

@*<p> Distance Index: 1 Parsec = 3.26 Light-years (The time it take for light from the sun to reach Earth)</p>*@
<h1>@ViewBag.NASA[p]["pl_name"]</h1>
<h2>@ViewBag.TripIndices.NumberOfDays-Day Trip</h2>
<img src="@ViewBag.PlanetPic[p]" alt=@ViewBag.NASA[p]["pl_name"] height="200" width="200" align="left" />
<br />
<p>Company Name: @companyName[ViewBag.TripIndices.CompanyIndex]</p>
<p>Cruise Ship: </p>
<img src="@shipImages[ViewBag.TripIndices.CompanyIndex]" height="100" width="100" align="left" />
<br />
<h3>Total Price: $@(priceBeforeTotal * 2319)</h3>
<br />
<p>Review count: @ViewBag.Yelp["businesses"][p]["review_count"]</p>
<p name="Rating">Rating: @ViewBag.Yelp["businesses"][p]["rating"]</p>
<br />
<p>Distance from Earth: @ViewBag.NASA[p]["st_dist"] parsecs</p>
<p> Distance Index: 1 Parsec = 3.26 Light-years (The time it take for light from the sun to reach Earth)</p>
<p>Departure Date: @ViewBag.Travel["results"][p]["itineraries"][0]["outbound"]["flights"][0]["departs_at"]</p>
<p>Number of Days: @ViewBag.TripIndices.NumberOfDays</p>
<p>Rooms remaining: @(ViewBag.Travel["results"][p]["itineraries"][0]["outbound"]["flights"][0]["booking_info"]["seats_remaining"] * ViewBag.TripIndices.NumberOfDays)</p>
<br />
<p>Refundable? @ViewBag.Travel["results"][p]["fare"]["restrictions"]["refundable"].ToString() </p>
<p>Spacesuit for exploration outside aircraft? @ViewBag.Travel["results"][p]["fare"]["restrictions"]["change_penalties"].ToString()</p>
<form action="/Home/Checkout" method="post">
    <input type="hidden" name="PlanetName" value="@ViewBag.NASA[p]["pl_name"]">
    <input type="hidden" name="Price" value="@(priceBeforeTotal * 2319)">
    <input type="hidden" name="Rating" value="@ViewBag.Yelp["businesses"][p]["rating"]">
    <input type="hidden" name="DateStart" value="@ViewBag.Travel["results"][p]["itineraries"][0]["outbound"]["flights"][0]["departs_at"]">@*NEED TO CHANGE*@
    <input type="hidden" name="DateEnd" value="@ViewBag.Travel["results"][p]["itineraries"][0]["outbound"]["flights"][0]["departs_at"]">@*NEED TO CHANGE*@
    <input type="hidden" name="ShipType" value="@shipImages[ViewBag.TripIndices.CompanyIndex]">
    <input type="hidden" name="CompanyName" value="@companyName[ViewBag.TripIndices.CompanyIndex]">
    <input type="hidden" name="PlanetImage" value="@ViewBag.PlanetPic">
    <input type="hidden" name="Refundable" value="@ViewBag.Travel["results"][p]["fare"]["restrictions"]["refundable"].ToString()">
    <input type="hidden" name="ExoSuit" value="@ViewBag.Travel["results"][p]["fare"]["restrictions"]["change_penalties"].ToString()">
    <input type="submit" value="Proceed to Checkout" />
</form>
@*if null, show unkown*@
<hr />
<h4>Destination Description for @ViewBag.NASA[p]["pl_name"]:</h4>
<ul>Host Star: @ViewBag.NASA[p]["pl_hostname"]</ul>
<ul>Method of Discovery: @ViewBag.NASA[p]["pl_discmethod"]</ul>
<ul>Mass in Units of Earth's Weight: @ViewBag.NASA[p]["pl_masse"] Earths</ul>
<ul>Time to Orbit Local Star: @ViewBag.NASA[p]["pl_orbper"] days</ul>
<ul>Year of Discovery: @ViewBag.NASA[p]["pl_disc"]</ul>
<ul>To Learn More: </ul>
<p>Exoplanet Encyplopedia: @ViewBag.NASA[p]["pl_pelink"]</p>
<p>Exoplanet Data Explorer: @ViewBag.NASA[p]["pl_edelink"]</p>